var win;var lblRadio;var lblEvents;var lblPromo;var adView;var db;var btnNowPlaying;var btnFB;var btnTwit;var fb;var em1text1;var em1text2;var em1;var em2text1;var em2text2;var em2;var em3text1;var em3text2;var em3;win=Ti.UI.currentWindow;loadConfig();Ti.API.warn('Email Page Load');function loadConfig(){var file=Ti.Filesystem.getFile(Ti.Filesystem.resourcesDirectory,'config/config.xml');var xmltext=file.read().text;var doc=Ti.XML.parseString(xmltext);var fbElement=doc.documentElement.getElementsByTagName("facebook");var em1Element=doc.documentElement.getElementsByTagName("email1");var em2Element=doc.documentElement.getElementsByTagName("email2");var em3Element=doc.documentElement.getElementsByTagName("email3");for(var i=0;i<fbElement.length;i++){var item=fbElement.item(i);fb=item.getAttributes().getNamedItem("username").nodeValue;}
for(var i=0;i<em1Element.length;i++){var item=em1Element.item(i);em1text1=item.getAttributes().getNamedItem("text1").nodeValue;em1text2=item.getAttributes().getNamedItem("text2").nodeValue;em1=item.getAttributes().getNamedItem("address").nodeValue;}
for(var i=0;i<em2Element.length;i++){var item=em2Element.item(i);em2text1=item.getAttributes().getNamedItem("text1").nodeValue;em2text2=item.getAttributes().getNamedItem("text2").nodeValue;em2=item.getAttributes().getNamedItem("address").nodeValue;}
for(var i=0;i<em3Element.length;i++){var item=em3Element.item(i);em3text1=item.getAttributes().getNamedItem("text1").nodeValue;em3text2=item.getAttributes().getNamedItem("text2").nodeValue;em3=item.getAttributes().getNamedItem("address").nodeValue;}}
win.backgroundImage='/images/tablet/background.png'
win.barImage='/images/tablet/header.png';adView=Ti.UI.iOS.createAdView({width:'auto',height:50,bottom:0});win.add(adView);imgNav=Ti.UI.createLabel({top:0,height:50,left:0,backgroundImage:'/images/tablet/email.png'});win.add(imgNav);lblRadio=Ti.UI.createLabel({text:em1text1+"\n"+em1text2,height:'auto',top:100,left:10,color:'White',font:{fontSize:20,fontStyle:'normal',fontWeight:'bold'},textAlign:'left'});lblRadio.addEventListener('click',function(e){var emailDialog=Ti.UI.createEmailDialog();emailDialog.toRecipients=[em1];emailDialog.open();});lblEvents=Ti.UI.createLabel({text:em2text1+"\n"+em2text2,height:'auto',top:250,left:10,color:'White',font:{fontSize:20,fontStyle:'normal',fontWeight:'bold'},textAlign:'left'});lblEvents.addEventListener('click',function(e){var emailDialog=Ti.UI.createEmailDialog();emailDialog.toRecipients=[em2];emailDialog.open();});lblPromo=Ti.UI.createLabel({text:em3text1+"\n"+em3text2,height:'auto',top:400,left:10,color:'White',font:{fontSize:20,fontStyle:'normal',fontWeight:'bold'},textAlign:'left'});lblPromo.addEventListener('click',function(e){var emailDialog=Ti.UI.createEmailDialog();emailDialog.toRecipients=[em3];emailDialog.open();});var lblFB=Ti.UI.createLabel({top:600,height:'auto',left:50,color:'White',font:{fontSize:18,fontStyle:'normal'},text:"'Like' us on Facebook"});btnFB=Ti.UI.createButton({top:595,height:27,width:27,left:10,backgroundImage:'/images/fb.png'});btnFB.addEventListener('click',function(e){var viewFB=Ti.UI.createWindow({url:'news_view.js'});viewFB.linkURL='http://www.facebook.com/'+fb;Ti.UI.currentTab.open(viewFB,{animated:true});});win.add(lblRadio);win.add(lblEvents);win.add(lblPromo);win.add(btnFB);win.add(lblFB);