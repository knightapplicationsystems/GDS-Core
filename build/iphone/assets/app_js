Ti.UI.setBackgroundColor('Black');var tabGroup=Ti.UI.createTabGroup({barColor:'Black'});var file=Ti.Filesystem.getFile(Ti.Filesystem.resourcesDirectory,'config/config.xml');var xmltext=file.read().text;var doc=Ti.XML.parseString(xmltext);var tabAudio=doc.documentElement.getElementsByTagName("tabNameAudio");for(var i=0;i<tabAudio.length;i++){var item=tabAudio.item(i);audioTab=item.getAttributes().getNamedItem("tabAudio").nodeValue;}
if(Ti.Platform.osname=='ipad'){var winAudio=Ti.UI.createWindow({url:'main_windows/iPad/audio.js'});var winNews=Ti.UI.createWindow({url:'main_windows/iPad/news.js'});var winTwitter=Ti.UI.createWindow({url:'main_windows/iPad/twitter.js'});var winEmail=Ti.UI.createWindow({url:'main_windows/iPad/email.js'});}else{var winAudio=Ti.UI.createWindow({url:'main_windows/iPhone/audio.js'});var winNews=Ti.UI.createWindow({url:'main_windows/iPhone/news.js'});var winTwitter=Ti.UI.createWindow({url:'main_windows/iPhone/twitter.js'});var winEmail=Ti.UI.createWindow({url:'main_windows/iPhone/email.js'});}
if(Ti.Platform.name=='android')
{var winAudio=Ti.UI.createWindow({url:'main_windows/android/audio.js'});var winNews=Ti.UI.createWindow({url:'main_windows/android/news.js'});var winTwitter=Ti.UI.createWindow({url:'main_windows/android/twitter.js'});var winEmail=Ti.UI.createWindow({url:'main_windows/android/email.js'});}
var tab1=Ti.UI.createTab({icon:'listen.png',title:audioTab,window:winAudio});var tab2=Ti.UI.createTab({icon:'rss.png',title:'News',window:winNews});var tab3=Ti.UI.createTab({icon:'twitter.png',title:'Twitter',window:winTwitter});var tab4=Ti.UI.createTab({icon:'email.png',title:'Email Us',window:winEmail});if(Ti.Platform.name=='android'){tab1.icon='/images/android/listen.png';tab2.icon='/images/android/rss.png';tab3.icon='/images/android/twitter.png';tab4.icon='/images/android/email.png';}
Ti.Media.defaultAudioSessionMode=Ti.Media.AUDIO_SESSION_MODE_PLAYBACK;tabGroup.addTab(tab1);tabGroup.addTab(tab2);tabGroup.addTab(tab3);tabGroup.addTab(tab4);tabGroup.open();